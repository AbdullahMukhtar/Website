---
export type BreadcrumbItem = {
  label: string;
  href: string;
};

export type Props = {
  items: BreadcrumbItem[];
};

const { items } = Astro.props;

const fullItems = [{ label: 'Home', href: '/' }, ...items];

// Schema.org BreadcrumbList
const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: fullItems.map((item, index) => ({
    '@type': 'ListItem',
    position: index + 1,
    name: item.label,
    item: new URL(item.href, Astro.site ?? 'https://verixaservices.com').href
  }))
};
---

<nav aria-label="Breadcrumb" class="mb-6">
  <ol class="flex flex-wrap items-center gap-2 text-sm text-slate-600">
    {
      fullItems.map((item, index) => (
        <li class="flex items-center gap-2">
          {index > 0 && <span class="text-slate-400">â€º</span>}
          {index === fullItems.length - 1 ? (
            <span class="font-semibold text-slate-900" aria-current="page">
              {item.label}
            </span>
          ) : (
            <a
              href={item.href}
              class="text-slate-600 no-underline hover:text-brand-700"
            >
              {item.label}
            </a>
          )}
        </li>
      ))
    }
  </ol>
</nav>

<script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />


