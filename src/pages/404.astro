---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found | Verixa Services" description="The page you’re looking for doesn’t exist.">
  <section class="container-page py-20">
    <div class="card p-10">
      <h1 class="text-2xl font-extrabold text-slate-900">Page not found</h1>
      <p class="mt-3 text-slate-600">Sorry, we couldn’t find that page.</p>
      <div class="mt-6 flex flex-wrap gap-3">
        <a class="btn-primary" href="/">Go home</a>
        <a class="btn-secondary" href="/#contact">Contact us</a>
      </div>
    </div>
  </section>
</BaseLayout>


