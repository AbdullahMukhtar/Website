    <script is:inline>
      (() => {
        // EmailJS init
        if (!window.emailjs) return;
        window.emailjs.init('s8Qjjyk1uYiGghLXh');

        const EMAILJS_SERVICE_ID = 'service_gjv047l';
        const EMAILJS_TEMPLATE_ID = 'template_l9dzuac';

        const contactForm = document.getElementById('contact-form');
        const formMessage = document.getElementById('form-message');
        const submitBtn = document.getElementById('submit-btn');

        function showMessage(message, type) {
          if (!formMessage) return;
          formMessage.textContent = message;
          formMessage.className =
            'rounded-xl border p-3 text-sm font-semibold ' +
            (type === 'success'
              ? 'border-emerald-200 bg-emerald-50 text-emerald-800'
              : type === 'error'
              ? 'border-rose-200 bg-rose-50 text-rose-800'
              : 'border-brand-200 bg-brand-50 text-brand-800');
          formMessage.classList.remove('hidden');
          formMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }

        function hideMessage() {
          if (!formMessage) return;
          formMessage.classList.add('hidden');
        }

        if (!contactForm || !submitBtn) return;

        contactForm.addEventListener('submit', async (e) => {
          e.preventDefault();
          hideMessage();

          submitBtn.disabled = true;
          submitBtn.textContent = 'Sending...';
          showMessage('Sending your message...', 'loading');

          try {
            await window.emailjs.sendForm(EMAILJS_SERVICE_ID, EMAILJS_TEMPLATE_ID, contactForm);
            showMessage('Thank you! We will get back to you soon.', 'success');
            contactForm.reset();
          } catch (err) {
            console.error('EmailJS Error:', err);
            showMessage(
              'Sorry, there was an error sending your message. Please try again later or email sales@verixaservices.com',
              'error'
            );
          } finally {
            submitBtn.disabled = false;
            submitBtn.textContent = 'Send';
          }
        });

        // Counter animation
        const prefersReduced =
          window.matchMedia && window.matchMedia('(prefers-reduced-motion: reduce)').matches;
        if (prefersReduced) return;

        const counters = document.querySelectorAll('[data-counter][data-to]');
        if (!('IntersectionObserver' in window) || counters.length === 0) return;

        const io = new IntersectionObserver(
          (entries) => {
            for (const entry of entries) {
              if (!entry.isIntersecting) continue;
              const el = entry.target;
              const to = Number(el.getAttribute('data-to') || '0');
              const start = 0;
              const duration = 900;
              const t0 = performance.now();

              function tick(now) {
                const p = Math.min(1, (now - t0) / duration);
                const v = Math.floor(start + (to - start) * (p < 0.9 ? p : 1));
                el.textContent = `${v}+`;
                if (p < 1) requestAnimationFrame(tick);
              }

              requestAnimationFrame(tick);
              io.unobserve(el);
            }
          },
          { threshold: 0.35 }
        );

        counters.forEach((c) => io.observe(c));
      })();
    </script>
