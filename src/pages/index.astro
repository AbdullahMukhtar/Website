const canonical = 'https://verixaservices.com/';

const jsonLd = {
  '@context': 'https://schema.org',
  '@graph': [
    {
      '@type': 'Organization',
      '@id': 'https://verixaservices.com/#organization',
      name: 'Verixa Services',
      url: 'https://verixaservices.com/',
      logo: 'https://verixaservices.com/logo.jpeg',
      email: 'sales@verixaservices.com',
      description:
        'AI-powered technology solutions and custom software development. Based in Karachi, Pakistan serving clients in USA, Canada, UK, and the Middle East.',
      areaServed: ['PK', 'US', 'CA', 'GB', 'AE', 'SA', 'QA', 'OM', 'KW', 'BH'],
      knowsAbout: [
        'AI development',
        'Machine learning',
        'Azure AI',
        'GPT integration',
        'LLM development',
        'Document AI',
        'OCR',
        'Computer vision',
        'Custom software development',
