const canonical = 'https://verixaservices.com/about.html';

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'AboutPage',
  mainEntity: {
    '@type': 'Organization',
    '@id': 'https://verixaservices.com/#organization',
    name: 'Verixa Services',
    foundingDate: '2019',
    description:
      'Leading AI development company in Karachi, Pakistan specializing in Azure AI, machine learning, document AI, computer vision, and custom software development.',
    numberOfEmployees: {
      '@type': 'QuantitativeValue',
      value: 20
    },
