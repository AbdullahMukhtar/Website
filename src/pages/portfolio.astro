---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import { caseStudies } from '../data/case-studies';

const title = 'Portfolio & Case Studies | Verixa Services AI Development Projects';
const description =
  'Explore our portfolio of 100+ successful AI development projects including healthcare AI, financial fraud detection, document processing, e-commerce personalization, and supply chain optimization for clients in USA, Canada, UK, Middle East.';

const canonical = 'https://verixaservices.com/portfolio.html';

const breadcrumbs = [{ label: 'Portfolio', href: '/portfolio.html' }];
---

<BaseLayout title={title} description={description} canonical={canonical}>
  <section class="container-page py-12">
    <Breadcrumbs items={breadcrumbs} />
  </section>

  <section class="container-page pb-16">
    <div class="card p-8 sm:p-10">
      <div class="reveal text-center">
        <h1 class="text-4xl font-extrabold tracking-tight text-slate-900 sm:text-5xl">
          Portfolio & Case Studies
        </h1>
        <p class="mx-auto mt-6 max-w-3xl text-lg leading-relaxed text-slate-600">
          Explore our successful AI development projects across healthcare, finance, e-commerce, logistics, and more. Each case
          study showcases real-world challenges, innovative solutions, and measurable business results delivered to clients across
          USA, Canada, UK, Middle East, and Pakistan.
        </p>
      </div>

      <div class="mt-12 grid gap-8">
        {
          caseStudies.map((study) => (
            <article class="reveal group rounded-2xl border border-slate-200 bg-white p-6 transition hover:border-brand-200 hover:shadow-soft sm:p-8">
              <div class="grid gap-6 lg:grid-cols-3">
                <div class="lg:col-span-2">
                  {study.featured && (
                    <div class="mb-3 inline-flex items-center gap-2 rounded-lg bg-brand-50 px-3 py-1 text-xs font-bold text-brand-700 ring-1 ring-brand-100">
                      <span>⭐</span>
                      Featured Project
                    </div>
                  )}
                  <h2 class="text-2xl font-extrabold text-slate-900 transition group-hover:text-brand-700">
                    <a href={`/case-studies/${study.slug}.html`} class="no-underline">
                      {study.title}
                    </a>
                  </h2>
                  <div class="mt-3 flex flex-wrap gap-3 text-sm text-slate-600">
                    <div class="flex items-center gap-1">
                      <span class="font-semibold">Client:</span>
                      {study.client}
                    </div>
                    <span class="text-slate-300">|</span>
                    <div class="flex items-center gap-1">
                      <span class="font-semibold">Industry:</span>
                      {study.industry}
                    </div>
                    <span class="text-slate-300">|</span>
                    <div class="flex items-center gap-1">
                      <span class="font-semibold">Duration:</span>
                      {study.duration}
                    </div>
                  </div>
                  <p class="mt-4 text-slate-600">{study.summary}</p>
                  <div class="mt-4 flex flex-wrap gap-2">
                    {study.tags.map((tag) => (
                      <span class="rounded-lg bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-700">{tag}</span>
                    ))}
                  </div>
                </div>

                <div class="rounded-xl border border-slate-200 bg-slate-50 p-6">
                  <div class="text-sm font-bold text-slate-700">Key Results</div>
                  <ul class="mt-4 space-y-2">
                    {study.results.slice(0, 4).map((result) => (
                      <li class="flex items-start gap-2 text-sm text-slate-600">
                        <span class="text-brand-600">✓</span>
                        {result}
                      </li>
                    ))}
                  </ul>
                  <a
                    href={`/case-studies/${study.slug}.html`}
                    class="mt-6 inline-flex items-center gap-2 text-sm font-bold text-brand-700 transition hover:gap-3"
                  >
                    Read Full Case Study →
                  </a>
                </div>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <section class="container-page py-16">
    <div class="card bg-gradient-to-r from-brand-600 to-brand-700 p-8 text-white sm:p-12">
      <div class="reveal text-center">
        <h2 class="text-3xl font-extrabold sm:text-4xl">Ready to Start Your AI Project?</h2>
        <p class="mx-auto mt-4 max-w-2xl text-lg text-white/90">
          Join 50+ satisfied clients across USA, Canada, UK, and Middle East. Let's discuss how we can help you achieve similar
          results with AI-powered solutions.
        </p>
        <div class="mt-8">
          <a
            href="/#contact"
            class="inline-flex rounded-2xl bg-white px-6 py-3 font-bold text-brand-700 no-underline transition hover:bg-slate-50"
          >
            Get Free Consultation
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>


