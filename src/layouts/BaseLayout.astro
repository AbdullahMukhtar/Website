---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BackToTop from '../components/BackToTop.astro';

export type Props = {
  title: string;
  description?: string;
  canonical?: string;
  robots?: string;
  ogImage?: string;
  ogImageAlt?: string;
  ogType?: 'website' | 'article';
  twitterCard?: 'summary' | 'summary_large_image';
  twitterSite?: string;
  twitterCreator?: string;
  themeColor?: string;
  jsonLd?: unknown;
  publishedTime?: string;
  modifiedTime?: string;
};

const {
  title,
  description,
  canonical,
  robots = 'index,follow,max-image-preview:large,max-snippet:-1,max-video-preview:-1',
  ogImage = 'https://verixaservices.com/logo.jpeg',
  ogImageAlt,
  ogType = 'website',
  twitterCard = 'summary_large_image',
  twitterSite,
  twitterCreator,
  themeColor = '#2563eb',
  jsonLd,
  publishedTime,
  modifiedTime
} = Astro.props;

const resolvedCanonical =
  canonical ??
  (Astro.site ? new URL(Astro.url.pathname, Astro.site).href : Astro.url.href);

const resolvedDescription =
  description ??
  'AI-powered technology solutions: AI/ML, Azure AI, document AI/OCR, computer vision, mobile apps, and custom software.';

function isObject(value: unknown): value is Record<string, any> {
  return typeof value === 'object' && value !== null && !Array.isArray(value);
}

function mergeJsonLd(defaultLd: unknown, pageLd: unknown): unknown {
  if (!pageLd) return defaultLd;
  if (!isObject(defaultLd) || !isObject(pageLd)) return pageLd;

  const defaultGraph = Array.isArray(defaultLd['@graph']) ? defaultLd['@graph'] : null;
  const pageGraph = Array.isArray(pageLd['@graph']) ? pageLd['@graph'] : null;
  if (!defaultGraph || !pageGraph) return pageLd;

  const merged = [...defaultGraph, ...pageGraph];
  const byId = new Map<string, any>();
  const withoutId: any[] = [];

  for (const node of merged) {
    const id = isObject(node) ? (typeof node['@id'] === 'string' ? node['@id'] : null) : null;
    if (id) byId.set(id, node);
    else withoutId.push(node);
  }

  return { ...defaultLd, ...pageLd, '@graph': [...byId.values(), ...withoutId] };
}

const defaultJsonLd = {
  '@context': 'https://schema.org',
  '@graph': [
    {
      '@type': 'Organization',
      '@id': 'https://verixaservices.com/#organization',
      name: 'Verixa Services',
      url: 'https://verixaservices.com/',
      logo: 'https://verixaservices.com/logo.jpeg',
      email: 'sales@verixaservices.com'
    },
    {
      '@type': 'WebSite',
      '@id': 'https://verixaservices.com/#website',
      url: 'https://verixaservices.com/',
      name: 'Verixa Services',
      publisher: { '@id': 'https://verixaservices.com/#organization' }
    },
    {
      '@type': 'WebPage',
      '@id': `${resolvedCanonical}#webpage`,
      url: resolvedCanonical,
      name: title,
      description: resolvedDescription,
      isPartOf: { '@id': 'https://verixaservices.com/#website' },
      about: { '@id': 'https://verixaservices.com/#organization' }
    }
  ]
};

const mergedJsonLd = mergeJsonLd(defaultJsonLd, jsonLd);
const jsonLdString = mergedJsonLd ? JSON.stringify(mergedJsonLd) : null;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={resolvedDescription} />
    <meta name="robots" content={robots} />
    <meta name="author" content="Verixa Services" />
    <meta name="theme-color" content={themeColor} />
    
    <!-- Geographic meta tags for local SEO -->
    <meta name="geo.region" content="PK-SD" />
    <meta name="geo.placename" content="Karachi" />
    <meta name="geo.position" content="24.8607;67.0011" />
    <meta name="ICBM" content="24.8607, 67.0011" />

    <link rel="canonical" href={resolvedCanonical} />
    
    <!-- Hreflang tags for international targeting -->
    <link rel="alternate" hreflang="en" href={resolvedCanonical} />
    <link rel="alternate" hreflang="en-US" href={resolvedCanonical} />
    <link rel="alternate" hreflang="en-GB" href={resolvedCanonical} />
    <link rel="alternate" hreflang="en-CA" href={resolvedCanonical} />
    <link rel="alternate" hreflang="en-AE" href={resolvedCanonical} />
    <link rel="alternate" hreflang="en-SA" href={resolvedCanonical} />
    <link rel="alternate" hreflang="en-PK" href={resolvedCanonical} />
    <link rel="alternate" hreflang="x-default" href={resolvedCanonical} />

    <meta property="og:type" content={ogType} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="Verixa Services" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={resolvedDescription} />
    <meta property="og:url" content={resolvedCanonical} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={ogImageAlt ?? title} />
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}

    <meta name="twitter:card" content={twitterCard} />
    {twitterSite ? <meta name="twitter:site" content={twitterSite} /> : null}
    {twitterCreator ? <meta name="twitter:creator" content={twitterCreator} /> : null}
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={resolvedDescription} />
    <meta name="twitter:url" content={resolvedCanonical} />
    <meta name="twitter:image" content={ogImage} />

    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <link rel="icon" type="image/png" href="/logo.jpeg" />
    <link rel="apple-touch-icon" href="/logo.jpeg" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <slot name="head" />

    {jsonLdString ? (
      <script type="application/ld+json" set:html={jsonLdString} />
    ) : null}
  </head>
  <body class="min-h-screen">
    <Header />
    <main><slot /></main>
    <Footer />
    <BackToTop />

    <slot name="bodyEnd" />

    <script is:inline>
      (() => {
        const prefersReduced = window.matchMedia && window.matchMedia('(prefers-reduced-motion: reduce)').matches;
        if (prefersReduced) return;

        const els = document.querySelectorAll('.reveal');
        if (!('IntersectionObserver' in window) || els.length === 0) {
          els.forEach((el) => el.classList.add('is-visible'));
          return;
        }

        const io = new IntersectionObserver(
          (entries) => {
            for (const entry of entries) {
              if (entry.isIntersecting) {
                entry.target.classList.add('is-visible');
                io.unobserve(entry.target);
              }
            }
          },
          { rootMargin: '0px 0px -10% 0px', threshold: 0.1 }
        );

        els.forEach((el) => io.observe(el));
      })();
    </script>
  </body>
</html>


