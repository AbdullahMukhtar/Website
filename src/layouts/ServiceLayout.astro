---
import BaseLayout from './BaseLayout.astro';

export type Props = {
  title: string;
  description: string;
  canonical: string;
  serviceName: string;
  serviceType: string;
  heroHeadline: string;
  heroSubhead: string;
  heroImageName?: 'hero' | 'team' | 'workspace';
  heroImageAlt?: string;
  primaryCtaLabel: string;
  primaryCtaHref: string;
  secondaryCtaLabel: string;
  secondaryCtaHref: string;
  highlights: { title: string; items: string[] }[];
  capabilities: { title: string; text: string }[];
  approach: { title: string; text: string }[];
  related: { href: string; label: string }[];
};

const {
  title,
  description,
  canonical,
  serviceName,
  serviceType,
  heroHeadline,
  heroSubhead,
  heroImageName,
  heroImageAlt,
  primaryCtaLabel,
  primaryCtaHref,
  secondaryCtaLabel,
  secondaryCtaHref,
  highlights,
  capabilities,
  approach,
  related
} = Astro.props;

const jsonLd = {
  '@context': 'https://schema.org',
  '@graph': [
    {
      '@type': 'Service',
      '@id': `${canonical}#service`,
      name: serviceName,
      serviceType,
      provider: { '@id': 'https://verixaservices.com/#organization' },
      areaServed: ['PK', 'US', 'CA', 'GB', 'AE', 'SA', 'QA', 'OM', 'KW', 'BH']
    },
    {
      '@type': 'BreadcrumbList',
      '@id': `${canonical}#breadcrumbs`,
      itemListElement: [
        {
          '@type': 'ListItem',
          position: 1,
          name: 'Home',
          item: 'https://verixaservices.com/'
        },
        {
          '@type': 'ListItem',
          position: 2,
          name: serviceName,
          item: canonical
        }
      ]
    }
  ]
};
---

<BaseLayout title={title} description={description} canonical={canonical} jsonLd={jsonLd}>
  <section class="container-page py-14 sm:py-16">
    <div class="card p-8 sm:p-10">
      <div class="grid gap-8 lg:grid-cols-2 lg:items-center">
        <div class="reveal">
          <div class="inline-flex items-center gap-2 rounded-full bg-brand-50 px-3 py-1 text-xs font-semibold text-brand-800 ring-1 ring-brand-100">
            <span class="h-1.5 w-1.5 rounded-full bg-brand-500"></span>
            {serviceType}
          </div>
          <h1 class="mt-5 text-3xl font-extrabold tracking-tight text-slate-900 sm:text-4xl">{heroHeadline}</h1>
          <p class="mt-4 max-w-2xl text-slate-600">{heroSubhead}</p>
          <div class="mt-7 flex flex-wrap gap-3">
            <a class="btn-primary" href={primaryCtaHref}>{primaryCtaLabel}</a>
            <a class="btn-secondary" href={secondaryCtaHref}>{secondaryCtaLabel}</a>
          </div>
        </div>

        <div class="reveal hidden lg:block">
          {heroImageName ? (
            <div class="overflow-hidden rounded-2xl border border-slate-200 bg-slate-50">
              <div class="relative aspect-[4/3] bg-slate-950">
                <picture>
                  <source srcset={`/images/stock/${heroImageName}.avif`} type="image/avif" />
                  <source srcset={`/images/stock/${heroImageName}.webp`} type="image/webp" />
                  <img
                    src={`/images/stock/${heroImageName}.jpg`}
                    alt={heroImageAlt ?? 'Service hero image'}
                    class="h-full w-full object-cover opacity-92"
                    loading="eager"
                  />
                </picture>
                <div class="absolute inset-0 bg-gradient-to-tr from-slate-950/65 via-slate-950/10 to-brand-600/15"></div>
              </div>
            </div>
          ) : (
            <div class="rounded-2xl border border-slate-200 bg-slate-50 p-8">
              <div class="text-sm font-extrabold text-slate-900">Professional delivery</div>
              <div class="mt-2 text-sm text-slate-600">Clear plan, measurable KPIs, and production-grade engineering.</div>
            </div>
          )}
        </div>
      </div>

      <div class="mt-10 grid gap-5 lg:grid-cols-2">
        {highlights.map((h) => (
          <div class="reveal rounded-2xl border border-slate-200 bg-slate-50 p-7">
            <h2 class="text-lg font-extrabold text-slate-900">{h.title}</h2>
            <ul class="mt-4 list-disc space-y-2 pl-5 text-sm text-slate-700">
              {h.items.map((i) => (
                <li>{i}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="container-page py-14 sm:py-16">
    <div class="card p-8 sm:p-10">
      <div class="reveal">
        <h2 class="text-2xl font-extrabold tracking-tight text-slate-900">Capabilities</h2>
        <p class="mt-3 max-w-2xl text-slate-600">A focused set of capabilities designed for production delivery.</p>
      </div>
      <div class="mt-8 grid gap-5 md:grid-cols-2 lg:grid-cols-3">
        {capabilities.map((c) => (
          <div class="reveal rounded-2xl border border-slate-200 bg-slate-50 p-6">
            <div class="text-sm font-extrabold text-slate-900">{c.title}</div>
            <div class="mt-2 text-sm text-slate-600">{c.text}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="container-page py-14 sm:py-16">
    <div class="card p-8 sm:p-10">
      <div class="reveal">
        <h2 class="text-2xl font-extrabold tracking-tight text-slate-900">Delivery approach</h2>
        <p class="mt-3 max-w-2xl text-slate-600">From discovery to deployment, we keep it measurable and predictable.</p>
      </div>
      <div class="mt-8 grid gap-5 md:grid-cols-2">
        {approach.map((a, idx) => (
          <div class="reveal rounded-2xl border border-slate-200 bg-slate-50 p-6">
            <div class="flex items-start gap-3">
              <div class="flex h-10 w-10 items-center justify-center rounded-2xl bg-brand-50 text-brand-800 ring-1 ring-brand-100">
                <span class="text-sm font-extrabold">{idx + 1}</span>
              </div>
              <div>
                <div class="text-sm font-extrabold text-slate-900">{a.title}</div>
                <div class="mt-2 text-sm text-slate-600">{a.text}</div>
              </div>
            </div>
          </div>
        ))}
      </div>

      <div class="reveal mt-10 rounded-2xl border border-slate-200 bg-slate-50 p-7">
        <div class="flex flex-col items-start justify-between gap-5 sm:flex-row sm:items-center">
          <div>
            <div class="text-lg font-extrabold text-slate-900">Ready to get started?</div>
            <div class="mt-1 text-sm text-slate-600">We can share a short plan and a realistic timeline within a few days.</div>
          </div>
          <div class="flex flex-wrap gap-3">
            <a class="btn-primary" href="/#contact">Contact us</a>
            <a class="btn-secondary" href="/#services">All services</a>
          </div>
        </div>
      </div>

      <div class="reveal mt-10">
        <div class="text-xs font-bold uppercase tracking-wide text-slate-500">Related services</div>
        <div class="mt-3 flex flex-wrap gap-2">
          {related.map((r) => (
            <a class="rounded-full bg-slate-100 px-4 py-2 text-sm font-semibold text-slate-800 no-underline hover:bg-slate-200" href={r.href}>
              {r.label}
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>


